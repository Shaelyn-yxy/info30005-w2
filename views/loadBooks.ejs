<!DOCTYPE html>
<html>
<title>Load Books</title>
    <%- include home.ejs %>
<body>
<section class="get">
    <% list.map(function(item,i){%>
    Book<%=i+1%>:
    <form>
        <div>Book Name:<%= item.bookName %></div>
        <div>Author name:<%= item.authorName %></div>
        <div>Category:<%= item.category %></div>
        <div>Price:<%= item.price %></div>
        <button type="button">
            <a href="/users/addFav?id=<%= item._id %>">
                Add to Favorite list
            </a>
        </button>
        <button type="button">
            <a href="/home/book?id=<%= item._id %>">
                Contact Seller
            </a>
        </button>
    </form>
    </br>
    <% }) %>
</section>
</body>
</html>